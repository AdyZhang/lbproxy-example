<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:camel="http://camel.apache.org/schema/spring" 
       xmlns:cxf="http://camel.apache.org/schema/cxf"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://camel.apache.org/schema/cxf http://camel.apache.org/schema/cxf/camel-cxf.xsd
                           http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">

  <cxf:cxfEndpoint id="greetingServiceLB" address="http://localhost:9090/greetingService" serviceClass="org.fusebyexample.examples.greeter.Greeter" />

  <camelContext trace="false" xmlns="http://camel.apache.org/schema/spring">
  
    <route id="greetingServiceLBRoute">
      <from uri="cxf:bean:greetingServiceLB?dataFormat=POJO&amp;loggingFeatureEnabled=true" />
      <loadBalance>
        <roundRobin />
        <to uri="cxf:http://localhost:9090/englishGreetingService?serviceClass=org.fusebyexample.examples.greeter.Greeter" />
        <to uri="cxf:http://localhost:9090/spanishGreetingService?serviceClass=org.fusebyexample.examples.greeter.Greeter" />
        <to uri="cxf:http://localhost:9090/germanGreetingService?serviceClass=org.fusebyexample.examples.greeter.Greeter" />
      </loadBalance>
    </route>
    
  </camelContext>

</beans>
